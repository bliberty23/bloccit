<%= form_for [comment.post.topic, comment.post, comment] do |f| %>
   <div class="form-group">
     <%= f.text_area :body, rows: 4, class: 'form-control', placeholder: "Enter comment" %>
   </div>
   <div class="form-group">
     <%= f.submit "Save", class: 'btn btn-success pull-right' %>
   </div>
<% end %>