<div class="row">
  <div class='col-xs-1'>
    <%= render partial: 'votes/voter', locals: { post: @post } %>
  </div>
  <div class="col-xs-11">
    <h1><%= @post.markdown_title %>
      <small>
         <%= image_tag(@post.user.avatar.tiny.url) if @post.user.avatar? %>
         submitted <%= time_ago_in_words(@post.created_at) %> ago by
         <%= @post.user.name %>
      </small>
    </h1>
  </div>
</div>
<div class="row">
  <div class="col-xs-10">
    <%= image_tag(@post.image.url, class: 'img-thumbnail img-responsive pull-right') if @post.image? %>
    <%= @post.markdown_body %>
  </div>
  <div class="col-xs-2">
    <% if policy(Favorite).create? %>
      <%= render partial: 'favorites/favorite', locals: { post: @post } %>
    <% end %>
    <% if policy(@post).edit? %>
      <%= link_to "Edit", edit_topic_post_path(@topic, @post), class: 'btn btn-success btn-block' %>
    <% end %>
    <% if policy(@post).destroy? %>
      <%= link_to "Delete Post", [@topic, @post], method: :delete, class: 'btn btn-danger btn-block', data: { confirm: 'Are you sure you want to delete this post?' } %>
    <% end %>
    <div>
      <h3><%= pluralize(@post.points, 'point') %></h3>
      <small>
        <%= pluralize(@post.up_votes, 'up vote') %>
        <%= pluralize(@post.down_votes, 'down vote') %>
      </small>
    </div>
  </div>
</div>
<% if policy(@new_comment).show? %>
  <div class='row'>
    <div class='col-xs-10'>
      <h3>Comments</h3>
      <%= render @comments %>
    </div>
  </div>
  <div class='row'>
    <div class='col-xs-10'>
      <h4>Add a comment</h4>
      <%= render partial: 'comments/form', locals: { comment: @new_comment } %>
    </div>
  </div>
<% else %>
  <div class='row'>
    <div class='col-xs-10'>
        <h3>Comments</h3>
      <div class='alert alert-info'>
        <p>You need to be signed in to view and contribute to comments.</p>
      </div>
    </div>
  </div>
<% end %>
