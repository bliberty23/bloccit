<div class="row">
  <div class="col-xs-12">
    <h1>Topics</h1>
  </div>
</div>

<div class="row">
  <div class="col-xs-10">
    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
          <small>
            <%= topic.description %>
          </small>
        </div>
      </div>
    <% end %>
    <%= will_paginate @topics %>
  </div>
  <div class="col-xs-2">
    <% if policy(Topic.new).create? %>
      <%= link_to "New Topic", new_topic_path, class: 'btn btn-success btn-block' %>
    <% end %>
  </div>
</div>
