<h1><%= @topic.name %></h1>

<div class="row">
  <div class="col-xs-10">
    <p class="lead"><%= @topic.description %></p>
    <% @posts.each do |post| %>
      <div class="media">
        <%= render partial: 'votes/voter', locals: { post: post } %>
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to (post.markdown_title), [@topic, post] %>
          </h4>
          <%= image_tag(post.image) %>
          <small>
            <%= image_tag(post.user.avatar.tiny.url) if post.user.avatar? %>
            submitted <%= time_ago_in_words(post.created_at) %> ago by
            <%= post.user.name %><br>
            <%= post.comments.count %> Comments
          </small>
        </div>
      </div>
    <% end %>
  </div>
  <%= will_paginate @posts %>
  <div class="col-xs-2">
    <% if policy(@topic).update? %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success btn-block' %>
    <% end %>
    <% if policy(@topic).destroy? %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger btn-block', data: { confirm: 'Are you sure you want to delete this topic?' } %>
    <% end %>
  </div>
</div>
<div class="row">
  <div class="col-xs-10">
    <% if policy(Post.new).create? %>
      <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-primary pull-right' %>
    <% end %>
  </div>
</div>
